<div class="page-header">
  <h1 class="col-md-offset-1"><%= @page_title %></h1>
  <div class="btn-group col-md-offset-1" role="group" aria-label="...">
    <button type="button" class="btn btn-default"><a href="/">Create New</a></button>
    <button type="button" class="btn btn-default"><a href="/">Back</a></button>
  </div>
</div>

<div class="container">
  <% @people.each do |person| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <table>
          <tr>
            <td><h4>Name:  <%= person.name %></h4></td>
          </tr>
           <tr>
            <td><h6>Date of Birth:  <%= person.dob %></h6></td>
          </tr>
        </table>
          <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default"><a href="/<%= @type %>/<%= person.id %>">View</a></button>
            <button type="button" class="btn btn-default"><a href="/<%= @type %>/<%= person.id %>">Edit</a></button>
            <button type="button" class="btn btn-default"><td><a href="/delete_<%= @type %>/<%= person.id %>">Delete</a></td></button>
            <button type="button" class="btn btn-default"><a href="/">Back</a></button>
          </div>
      </div>
      <div class="panel-body">
        <table>
          <tr>
            <td width="30%"><img src = "<%= person.image_url %>"></td>
            <td><%= person.bio %></td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
</div>
