<div class="page-header">
  <h1 class="col-md-offset-1"><%= @page_title %></h1>
</div>

<div class="container">
  <div class="panel panel-default">
      <div class="panel-heading">
            <div class=""><h4>Name:  <%= @person.name %></h4></div>
            <div class=""><h6>Date of Birth:  <%= @person.dob %></h6></div>
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default"><a href="/<%= @type %>/<%= @person.id %>">View</a></button>
                <button type="button" class="btn btn-default"><a href="/<%= @type %>/edit_form/<%= @person.id %>">Edit</a></button>
                <button type="button" class="btn btn-default"><td><a href="/delete_<%= @type %>/<%= @person.id %>">Delete</a></td></button>
                <button type="button" class="btn btn-default"><a href="/<%= @type %>/">Back</a></button>
            </div>
      </div>
      <div class="panel-body">
        <div class="row">
            <div class="col-md-3"><img src = "<%= @person.image_url %>"></div>
            <div class="col-md-9"><%= @person.bio %></div>
        </div>
      </div>
    </div>
  </div>
</div>
